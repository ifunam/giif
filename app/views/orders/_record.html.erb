<div class="<%= set_row_class(record_counter) %>">
  <span class="id"><%= record.id %></span>
  <span class="description">
    <b>Productos:</b><br/>
    <%= numerate_list(record.products, :description)%>
    <b>Proveedores:</b>
    <%= numerate_list(record.providers, :name)%>
    <% unless record.currency.nil?%>
    <span style="margin-left: 50px; font-weight: bold;">
      Total: <%= record.total_price %>,<%= " Divisa: " + record.currency_order.currency.name if !record.currency_order.nil?%>
    </span>
    <% end%>
    <span id="icon">
      <%= link_to(image_tag("icon_show.png", :title => 'Ver mÃ¡s detalles', :size => '16x16'), :action => 'show', :id => record.id)%>
    </span>
  </span>

  <span class="date"><%= record.date.to_s :short %></span>
  <span class="date_update"><%= record.updated_at.to_s :date_only %></span>
  <span class="status" id="<%= record.dom_id + '_status' %>">
    <%= record.current_status %>
  </span>

  <span class="actions" id="<%= record.dom_id + '_actions' %>">
    <%= links_for_actions(controller_name, record)%><br/>
    <span class="progress_bar"><%= image_tag('progress_bar3.gif', :id => "record_#{record.id}_loader_indicator", :style => 'display: none') %></span>
</span>
  </span>

</div>
