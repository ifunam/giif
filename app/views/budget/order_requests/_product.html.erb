<div id="number_cell">
  <a><%= product_counter + 1%></a>
</div>
 
<div id="quantity_cell">
  <a><%= product.quantity%></a>
</div>
 
<div id="description_cell">
  <a><%= product.description%></a>
</div>
 
<div id="unit_cell">
  <a><%= product.quantity%></a>
</div>
 
<div id="price_per_unit_cell">
  <a><%= product.price_per_unit%></a>
</div>
 
<div id="total_cell">
  <a><%= product.quantity * product.price_per_unit%></a>
</div>